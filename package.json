{
	"name": "website",
	"version": "0.1.0",
	"author": "killbasa <contact@killbasa.com>",
	"license": "MIT",
	"type": "module",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/website.git"
	},
	"homepage": "https://github.com/killbasa/website",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "npm run sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"ci": "npm run check && npm run lint && npm run build"
	},
	"devDependencies": {
		"@killbasa/eslint-config": "^3.1.3",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.20.8",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"eslint": "9.25.1",
		"eslint-config-prettier": "^10.1.5",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.28.2",
		"svelte-check": "^4.1.7",
		"typescript": "5.8.3",
		"vite": "6.3.4"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,json,html}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json,html}\""
		]
	},
	"engines": {
		"node": "22.x"
	},
	"packageManager": "npm@11.3.0",
	"volta": {
		"node": "22.14.0",
		"npm": "11.3.0"
	}
}
