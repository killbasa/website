{
	"name": "website",
	"version": "0.1.0",
	"author": "killbasa <contact@killbasa.com>",
	"license": "MIT",
	"type": "module",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/website.git"
	},
	"homepage": "https://github.com/killbasa/website",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "npm run sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"ci": "npm run check && npm run lint && npm run build"
	},
	"devDependencies": {
		"@killbasa/eslint-config": "^3.1.6",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.0.1",
		"eslint": "9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "5.9.3",
		"vite": "7.2.7",
		"wrangler": "^4.54.0"
	},
	"resolutions": {
		"prettier": "3.6.2"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,json,html}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json,html}\""
		]
	},
	"engines": {
		"node": "24.x"
	},
	"packageManager": "yarn@4.12.0",
	"volta": {
		"node": "24.12.0"
	}
}
